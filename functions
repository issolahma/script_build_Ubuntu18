#!/bin/bash

function airplane {
    # Modification de grub pour le mode avion
    sudo sed -i 's/splash/splash acpi_os_name=Linux acpi_osi= acpi_backlight=vendor/g' /etc/default/grub 
}

function nvidia {
    # Installation du pilote Nvidia
    echo -e ${CYAN}"Installation du pilote Nvidia"${RESETCOLOR}
    add-apt-repository -y ppa:graphics-drivers/ppa
    apt update
    apt install nvidia-390
}

function tuxedoAirplane {
    # Installation airplane driver Tuxedo pour la P775DM3
    echo -e ${CYAN}"Installation du module Tuxedo"${RESETCOLOR}
#TODO
}
